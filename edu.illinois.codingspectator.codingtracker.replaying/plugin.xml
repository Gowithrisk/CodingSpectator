<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Operation Sequence Replaying"
            id="edu.illinois.codingspectator.codingtracker.replaying">
      </category>
      <view
            name="Operation Sequence View"
            icon="icons/sample.gif"
            category="edu.illinois.codingspectator.codingtracker.replaying"
            class="edu.illinois.codingspectator.codingtracker.replaying.OperationSequenceView"
            id="edu.illinois.codingspectator.codingtracker.replaying.views.OperationSequenceView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="edu.illinois.codingspectator.codingtracker.replaying.views.OperationSequenceView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
